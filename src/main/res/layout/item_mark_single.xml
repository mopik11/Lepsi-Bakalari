<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    android:background="@drawable/glass_card"
    android:padding="16dp">

    <!-- Kruh se známkou -->
    <TextView
        android:id="@+id/textMark"
        android:layout_width="52dp"
        android:layout_height="52dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/glass_circle"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:textStyle="bold" />

    <!-- Název předmětu (Větší, nahoře) -->
    <TextView
        android:id="@+id/textSubject"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintStart_toEndOf="@id/textMark"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/textDate"
        android:textColor="@color/white"
        android:textSize="17sp"
        android:textStyle="bold"
        android:ellipsize="end"
        android:maxLines="1" />

    <!-- Téma/Popis (Menší, pod předmětem) -->
    <TextView
        android:id="@+id/textTopic"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        app:layout_constraintStart_toStartOf="@id/textSubject"
        app:layout_constraintTop_toBottomOf="@id/textSubject"
        app:layout_constraintEnd_toEndOf="parent"
        android:textColor="@color/text_secondary"
        android:textSize="14sp"
        android:maxLines="2"
        android:ellipsize="end" />

    <!-- Datum (Malý badge vpravo nahoře) -->
    <TextView
        android:id="@+id/textDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="#CCFFFFFF"
        android:textSize="12sp"
        android:textStyle="bold"
        android:background="@drawable/ripple_glass"
        android:paddingHorizontal="10dp"
        android:paddingVertical="4dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
