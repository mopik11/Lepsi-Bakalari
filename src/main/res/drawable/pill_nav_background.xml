<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Outer Thick Edge / Reflection -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="45dp" />
            <gradient
                android:angle="135"
                android:startColor="#80FFFFFF"
                android:centerColor="#0DFFFFFF"
                android:endColor="#40FFFFFF"
                android:type="linear" />
        </shape>
    </item>
    
    <!-- Refracted Side Highlight -->
    <item android:left="1dp" android:top="1dp" android:right="1dp" android:bottom="1dp">
        <shape android:shape="rectangle">
            <corners android:radius="44dp" />
            <stroke android:width="1dp" android:color="#40FFFFFF" />
        </shape>
    </item>

    <!-- Inner Glass Content (More opaque for refractive look) -->
    <item android:top="2dp" android:bottom="2dp" android:left="2dp" android:right="2dp">
        <shape android:shape="rectangle">
             <corners android:radius="43dp" />
             <solid android:color="#1A000000" />
        </shape>
    </item>

</layer-list>
