<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Hlavní skleněný kruh -->
    <item>
        <shape android:shape="oval">
            <gradient
                android:type="linear"
                android:angle="135"
                android:startColor="#4DFFFFFF"
                android:centerColor="#1AFFFFFF"
                android:endColor="#0DFFFFFF" />
            <stroke
                android:width="1dp"
                android:color="#4DFFFFFF" />
        </shape>
    </item>
    
    <!-- Horní odlesk (Specularity) -->
    <item android:top="2dp" android:left="4dp" android:right="4dp" android:bottom="14dp">
        <shape android:shape="oval">
            <gradient
                android:type="linear"
                android:angle="90"
                android:startColor="#00FFFFFF"
                android:endColor="#4DFFFFFF" />
        </shape>
    </item>
</layer-list>
